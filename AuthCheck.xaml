<Window x:Class="DigitalSkills2017.AuthCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSkills2017"
        mc:Ignorable="d"
        Title="AuthCheck" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ваши последние авторизации:" Margin ="5" Grid.Row="0" FontSize="18"></TextBlock>
        <DataGrid Grid.Row="2"></DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <RadioButton Content="Софт"  Margin="50,10,10,10"></RadioButton>
            <RadioButton Content="Система"  Margin="50,10,10,0"></RadioButton>
            <Button Name="Close" Content="Confirm" Margin="50,0,10,0" Height="20" Width="100" Click="Close_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
