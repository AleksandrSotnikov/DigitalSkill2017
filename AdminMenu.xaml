<Window x:Class="DigitalSkills2017.AdminMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSkills2017"
        mc:Ignorable="d"
        Title="AdminMenu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Добавить пользователя" Click="MenuItemAddUser_Click"></MenuItem>
            <MenuItem Header="Выход" Click="MenuItemExit_Click"></MenuItem>
        </Menu>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Офис: " Margin="5"></TextBlock>
            <ComboBox Name="cbOffice" Width="128" Margin="5"></ComboBox>
        </StackPanel>
        <DataGrid Grid.Row="2"></DataGrid>
        <StackPanel Grid.Row="3" Orientation ="Horizontal">
            <Button Content="Сменить роль" Margin="10"/>
            <Button Content="Активировать/Дезактивировать аккаунт" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
