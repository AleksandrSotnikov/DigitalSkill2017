<Window x:Class="DigitalSkills2017.UserMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSkills2017"
        mc:Ignorable="d"
        Title="UserMenu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Exit" Click="MenuItemExit_Click"></MenuItem>
        </Menu>
        <TextBlock Text="Hi, username, Welcome to AMONIC airLine" Grid.Row ="1"></TextBlock>
        <StackPanel Grid.Row="2"  Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Time spent on System : " Margin="0,0,10,0"></TextBlock>
            <TextBlock Text="Number of crashes : " Margin="0,0,10,0"></TextBlock>
        </StackPanel>
        <DataGrid Grid.Row="3"></DataGrid>

    </Grid>
</Window>
